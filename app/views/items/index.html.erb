<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th align="left">Type</th>
      <th align="left">Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.type.name.upcase + "(" + item.type_id.to_s + ")" %></td>
        <td><%= item.name %></td>
        <td id=action_link><%= link_to 'Edit', edit_item_path(item) %></td>
        <td id=action_link><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

