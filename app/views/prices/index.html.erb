<p id="notice"><%= notice %></p>

<h1>Listing Prices</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Amount</th>
      <th>Date Bought</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td ><%= price.item_id %></td>
        <td id=amount><%= number_with_precision(price.amount, precision: 2) %></td>
        <td><%= price.date_bought %></td>
        <td id=action_link><%= link_to 'Edit', edit_price_path(price) %></td>
        <td id=action_link><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

