<h1 class="page_title">Prices</h1>

<div class="table-responsive">
  <table class="table">
    <% @prices.each do |price| %>
      <tr>
        
        <td class="col-md-1"> <%= price.item.name %></td>
        <td class="col-md-1" id="prices_amount"> <%= link_to number_with_precision(price.amount, precision: 2), edit_price_path(price.id) %></td>
        <td class="col-md-1"> <%= link_to(content_tag(:i,nil,class: 'fa fa-trash-o'), price, method: :delete, data: { confirm: "Are you sure?" }) %> </td>
      </tr>
    <% end %>
  </table>
</div>
